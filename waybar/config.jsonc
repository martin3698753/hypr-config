{
  "layer": "top",
  "position": "top",
  "height": 30,
  "margin": 0,
  "spacing": 10,
  "modules-left": ["sway/workspaces", "sway/language"],
  "modules-center": ["clock"],
  "modules-right": ["pulseaudio", "sway/window", "tray", "custom/powermenu"],

  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      "1": "<span >ä¸€</span>",
      "2": "<span >äºŒ</span>",
      "3": "<span >ä¸‰</span>",
      "4": "<span >å››</span>",
      "5": "<span >äº”</span>",
      "6": "<span >å…­</span>",
      "7": "<span >ä¸ƒ</span>",
      "8": "<span >å…«</span>",
      "9": "<span >ä¹</span>",
    },
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "ğŸ”‡ Muted",
    "format-icons": {
      "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"],
    },
    "scroll-step": 1,
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
  },

  "sway/window": {
    "max-length": 16,
    "tooltip": false,
    "icon": false,
    "format": "{app_id}",
    "format-alt": "",
    "hide-empty-text": true,
    "rewrite": {
      "org.mozilla.firefox": "Firefox",
      "org.kde.audiotube": "spotify",
    },
  },

  "custom/window": {
    "exec": "~/.config/waybar/scripts/get_window.sh",
    "interval": 1,
    "return-type": "json",
    "signal": 2,
    "max-length": 15,
    "on-click": "swaymsg [app_id=\"{app_id}\"] focus", // Optional: Click to refocus
  },

  "clock": {
    "format": "{:%H :%M}",
    "tooltip-format": "{:%A, %d. %B %Y\n%H:%M:%S}",
  },

  "tray": {
    "spacing": 10,
  },

  "custom/powermenu": {
    "format": "â»",
    "tooltip": "Power Menu",
    "on-click": "wlogout",
    //"on-click-right": "systemctl reboot",
    //"on-click-middle": "systemctl poweroff",
  },
  "sway/language": {
    "format": "{short}", // shows ğŸ‡ºğŸ‡¸ us, ğŸ‡¨ğŸ‡¿ cz
    "tooltip-format": "{long}", // full name in tooltip
    "hide-single-layout": false,
  },
}
